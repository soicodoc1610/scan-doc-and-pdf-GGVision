   "source": [
    "# Function to convert DOC/DOCX to TXT\n",
    "def convert_doc_to_txt(doc_path, txt_path, success_folder, failed_folder):\n",
    "    try:\n",
    "        if doc_path.lower().endswith(\".docx\"):\n",
    "            doc = Document(doc_path)\n",
    "            text = \"\\n\".join([p.text for p in doc.paragraphs])\n",
    "        elif doc_path.lower().endswith(\".doc\"):\n",
    "            import subprocess\n",
    "            text = subprocess.run([\"catdoc\", doc_path], capture_output=True, text=True).stdout\n",
    "        else:\n",
    "            raise ValueError(\"Unsupported file format\")\n",
    "\n",
    "        with open(txt_path, \"w\", encoding=\"utf-8\") as txt_file:\n",
    "            txt_file.write(text)\n",
    "\n",
    "        print(f\"‚úÖ Converted: {doc_path} ‚Üí {txt_path}\")\n",
    "        shutil.move(doc_path, os.path.join(success_folder, os.path.basename(doc_path)))\n",
    "\n",
    "    except Exception as e:\n",
    "        print(f\"‚ùå Error converting {doc_path}: {e}\")\n",
    "        shutil.move(doc_path, os.path.join(failed_folder, os.path.basename(doc_path)))\n",
    "\n",
    "# Function to process files with multithreading\n",
    "def process_files_multithreaded(input_folder, txt_folder, success_folder, failed_folder):\n",
    "    doc_files = [\n",
    "        os.path.join(input_folder, file)\n",
    "        for file in os.listdir(input_folder)\n",
    "        if file.lower().endswith((\".docx\", \".doc\"))\n",
    "    ]\n",
    "\n",
    "    with ThreadPoolExecutor(max_workers=workers) as executor:\n",
    "        for doc_path in doc_files:\n",
    "            txt_path = os.path.join(txt_folder, f\"{os.path.splitext(os.path.basename(doc_path))[0]}.txt\")\n",
    "            executor.submit(convert_doc_to_txt, doc_path, txt_path, success_folder, failed_folder)\n",
    "\n",
    "# ‚úÖ Ch·∫°y ch∆∞∆°ng tr√¨nh\n",
    "process_files_multithreaded(input_folder, txt_folder, success_folder, failed_folder)\n",
    "\n",
    "print(\"üéâ Ho√†n th√†nh chuy·ªÉn ƒë·ªïi DOC/DOCX th√†nh TXT!\")\n"
   ]
